@model StudentEnrollmentFrontend.Models.User

@{
    ViewData["Title"] = "Register Account";
}

<div class="row mt-5 pt-5 min-vh-100">
    <div class="col w-50">
        <h1  style="color: #ED6468;" class="text-center">@ViewData["Title"]</h1>
        <div class="row justify-content-center">
            <div  style="width: 30vw;">
                <section>
                    <form asp-action="Register">
                        <h2 class="text-center">Register your new account</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="UserName" class="form-label">Email</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Password" type="password" class="form-label">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input  class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label  type="password" class="form-label">Password Confirm</label>
                        </div>
                        @* <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div> *@
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg text-light" style="background-color: #ED6468;;">Register</button>
                        </div>
                        @*<div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>*@
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @* <partial name="_ValidationScriptsPartial" /> *@
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
