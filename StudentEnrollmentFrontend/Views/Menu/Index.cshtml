@model IEnumerable<StudentEnrollmentFrontend.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-5 pt-5 min-vh-100">
    <div class="col-sm-8 offset-md-2">
        <h1 style="color: #ED6468;">Menu Dashboard</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Starch)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Beverage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vegetable)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MealType!.MealTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MenuImageFilePath)
                    </th>
                    <th>
                        <a asp-action="Upsert" class="btn btn-sm btn-success"> <i class="fa-solid fa-plus"></i> New</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Starch)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Beverage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Meat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vegetable)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MealType!.MealTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MenuImageFilePath)
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-info"></i></a>
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this record?')">
                                        <i class="far fa-trash-alt"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
