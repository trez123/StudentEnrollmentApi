@model IEnumerable<StudentEnrollmentFrontend.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-4 min-vh-100">
    <div class="col-sm-8 offset-md-2">
        <h1 class="text-success">Student Dashboard</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Course!.CourseName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Parish!.ParishName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Size!.SizeName)
                    </th>
                    <th>
                        <a asp-action="Upsert" class="btn btn-sm btn-success"> <i class="fa-solid fa-plus"></i>New</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course!.CourseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Parish!.ParishName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Size!.SizeName)
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-info"></i></a>
                                    <button type="submit" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this record?')">
                                        <i class="far fa-trash-alt"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
